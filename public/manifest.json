{
  "name": "Power Automate actions handler",
  "description": "The tool to handle Power Automate actions",
  "version": "1.0.7",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "background",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker":
      "./static/js/Background.js"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "./static/js/Content.js"
      ],
      "all_frames": true
    }
  ]
}